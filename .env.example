# Thermal Label Printer - Environment Variables
# Copy this file to .env.local for local development
# Add these variables in Render dashboard for production deployment

# ============================================
# CLOUD PRINTING CONFIGURATION
# ============================================

# Set to 'true' for cloud printing via PrintNode, 'false' for local TCP printing
CLOUD_PRINTING=false

# PrintNode API Key (get from https://printnode.com)
# Required for cloud printing mode
PRINTNODE_API_KEY=your-printnode-api-key-here

# Cloud Printer ID from PrintNode
# Find this in your PrintNode dashboard
CLOUD_PRINTER_ID=your-printer-id-here

# ============================================
# AUTHENTICATION
# ============================================

# Company authentication token for API access
# Users must include this token in API requests
COMPANY_AUTH_TOKEN=thermal-internal-2024

# ============================================
# NODE ENVIRONMENT
# ============================================

# Environment: development, production, or test
NODE_ENV=development

# ============================================
# OPTIONAL - SENTRY INTEGRATION
# ============================================

# Sentry API Token (if using Sentry features)
SENTRY_AUTH_TOKEN=your-sentry-token-here

# Sentry Organization Slug
SENTRY_ORG=your-org-slug

# Sentry Project Name
SENTRY_PROJECT=your-project-name

# ============================================
# OPTIONAL - AI INTEGRATIONS
# ============================================

# OpenAI API Key (for chat toxicity detection)
OPENAI_API_KEY=your-openai-api-key-here

# Google Perspective API Key (for content moderation)
PERSPECTIVE_API_KEY=your-perspective-api-key-here

# ============================================
# LOCAL PRINTER CONFIGURATION (if not using cloud)
# ============================================

# Local thermal printer IP address
PRINTER_IP=192.168.1.87

# Local thermal printer port
PRINTER_PORT=9100

